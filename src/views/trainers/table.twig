{% extends "base.twig" %}
{% block title %}Тренеры{% endblock %}
{% block style %}<link rel="stylesheet" href="../css/table.css">{% endblock %}
{% block content %}
<table>
  <thead>
    <tr>
      {% if trainers is not empty %}
        {% for key in trainers|first|keys %}
          <th {% if key == "trainer_id" %}style="text-align: right;"{% endif %}>
            {{ columnsMap[key] ?? key|capitalize }}
          </th>
        {% endfor %}
      {% endif %}
    </tr>
  </thead>
  <tbody>
    {% for trainer in trainers %}
      <tr>
        {% for key, value in trainer %}
          <td {% if key == "trainer_id" %}style="text-align: right;"{% endif %}>
          {% if key == "trainer_photo" %}
            <img src="{{ value }}" style="max-width: 50px; height: auto; border-radius: 50%;">
          {% else %}
            {{ value }}
          {% endif %}
          </td>
        {% endfor %}
      </tr>
    {% else %}
      <tr>
        <td colspan="100%">Нет данных</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}